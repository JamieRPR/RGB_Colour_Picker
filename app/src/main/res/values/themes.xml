<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RGBColourPicker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_light</item>
        <item name="colorPrimaryVariant">@color/pink_medium</item>
        <item name="colorOnPrimary">@color/pink_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/peach_dark</item>
        <item name="colorSecondaryVariant">@color/peach_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RGBColourPicker.Fullscreen" parent="Theme.RGBColourPicker">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.RGBColourPicker.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.RGBColourPicker.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/pink_light</item>
        <item name="fullscreenTextColor">@color/pink_dark</item>
    </style>

    <style name="Theme.RGBColourPicker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RGBColourPicker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RGBColourPicker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>